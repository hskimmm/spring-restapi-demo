<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.spring.restapi.mapper.board.BoardMapper">

    <sql id="search">
        <if test="types != null and keyword != null">
            <foreach collection="types" item="type" open="AND (" separator="OR" close=")">
                <choose>
                    <when test='type.equals("T")'>
                        title LIKE CONCAT('%', #{keyword}, '%')
                    </when>
                    <when test='type.equals("C")'>
                        content LIKE CONCAT('%', #{keyword}, '%')
                    </when>
                    <when test='type.equals("W")'>
                        writer LIKE CONCAT('%', #{keyword}, '%')
                    </when>
                </choose>
            </foreach>
        </if>
    </sql>

    <select id="getBoards" resultType="com.spring.restapi.domain.Board">
        SELECT id, title, writer, content, created_at as createdAt, views
        FROM board
        WHERE id > 0
        <include refid="search"/>
        ORDER BY id DESC
        LIMIT #{skip}, #{amount}
    </select>

    <select id="getBoard" resultType="com.spring.restapi.domain.Board">
        SELECT id, title, writer, content, created_at as createdAt, views
        FROM board
        WHERE id = #{id}
    </select>

    <update id="incrementViews">
        UPDATE board SET
        views = views + 1
        WHERE id = #{id}
    </update>

    <insert id="writeBoard">
        INSERT INTO board
        (
            title,
            writer,
            content
        )
        VALUES
        (
            #{title},
            #{writer},
            #{content}
        )
    </insert>

    <update id="updateBoard">
        UPDATE board SET
            title = #{title},
            writer = #{writer}
        WHERE id = #{id}
    </update>

    <delete id="deleteBoard">
        DELETE FROM board WHERE id = #{id}
    </delete>

    <select id="count" resultType="int">
        SELECT COUNT(*)
        FROM board
        WHERE id > 0
        <include refid="search"/>
    </select>
</mapper>