<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.spring.restapi.mapper.comment.CommentMapper">
    <select id="getComments" resultType="com.spring.restapi.domain.Comment">
        SELECT id, board_id as boardId, content, created_at as createdAt
        FROM comments
        WHERE board_id = #{id}
    </select>
</mapper>